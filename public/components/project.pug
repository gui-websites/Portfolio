mixin project(project)
  .project
    img(src=project.img, onclick="projectClick(this.parentNode)")
    .project-blurb
      div 
        .project-title
          h3=project.name
          i.cross(data-feather="x-square" onclick="projectClick(this.parentNode.parentNode.parentNode.parentNode)")
        .project-blurb-text !{project.desc}
      - const is_apk = project.cta.link.endsWith('apk')
      a.cta(href=project.cta.link download=(is_apk ? '' : 'false') target=(is_apk ? '' : '_blank')) #{project.cta.text}
    
script.

  function projectClick(el) {
    el.classList.toggle('show')
  }
    
style.
  
  .project img {
    width: 100%;
    aspect-ratio: 4/3;
    
    margin-bottom: -5px;
  }
  
  .project img, .project .cross {
    cursor: pointer;
  }
  
  .project .project-blurb {
    background-color: var(--black);
    color: var(--white);
    
    padding: 30px;
    box-sizing: border-box;
    
    position: absolute;
    left: 0; right: 0; top: 0; bottom: 0;
    
    width: 100%;
    
    display: grid;
    grid-template-rows: 1fr auto;
    
    transform: scale(0);
    opacity: 0;
    transform-origin: bottom center;
    transition: all 150ms;
  }
  
  .project .project-title {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-bottom: 30px;
  }
  
  .project .project-blurb h3 {
    margin: 0;
  }
  
  .project .project-blurb-text {
    text-align: justify;
  }
  
  .project.show .project-blurb {
    transform: scale(1);
    opacity: 1;
  }
  
  .project .project-blurb .cta {
    color: var(--white);
    text-decoration: none;
    display: block;
    
    text-align: center;
    
    background-color: var(--accent);
    border-radius: 15px;
    
    padding: 15px;
    margin-top: 15px;
  }
